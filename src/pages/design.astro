---
import NavFija from "../components/navFija.astro";
import NavPop from "../components/navPop.astro";
import Footer from "../components/Footer.astro";
import Layout from "../layouts/Layout.astro";
import Dropdown from "../components/Dropdown.astro";
import Proyectos from "../components/comp-design/proyectos.astro";
import DarkMode from "../components/BotonDark.astro";
---

<link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
/>
<script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
<body>
    <Layout title="Diseño" />
    <!-- MENU -->
	<div class="barra">
		<img src="/src/pages/img/_Logo-pro.png">
	</div>
	<div class="nav-fija">
		<NavFija />
	</div>
	<div class="nav-pop">
		<Dropdown />
	</div>
	<!-- MENU -->
    <div class="boton-dark">
        <DarkMode />
    </div>
    <header>
        <div class="logo-design">
             <img src="/src/components/comp-design/img/Designpro.gif">
        </div>
        <!--<h1>DISEÑO</h1> -->
    </header>
    <div class="slogan">
        <h2>CONVIRTIENDO TU MARCA EN UN SUEÑO HECHO REALIDAD</h2>
    </div>
    <Proyectos />
    

    
    <Footer />
</body>
<style>
    * {
        font-size: montserrat;
        margin: 0px;
        padding: 0px;
    }
    body {
        background-color: whitesmoke;
    }
    .titulo{
        padding: 3em;
        text-align: center;
        margin-top: 4em;
    }
    h2{
        font-size: 1.7em;
        font-family: montserrat;
        font-weight: 700;
    }
    .barra{
       display: none;
        width: 100%;
        background-color: rgb(0, 0, 175);
        height: 160px;
        text-align: center;
        padding-top: 1em;
    }
    .barra img{
        max-width: 95%;
        height:80%;
    }
	.nav-pop {
        visibility: hidden;
    }
	@media (max-width: 750px) {
        .nav-fija {
            display: none;
        }
        .nav-pop {
            visibility: visible;
            width: 100%;
            background-color: rgba(0, 58, 159, 0.567);
        }
        .navs {
            visibility: visible;
        }
        .barra{
            display:block;
        }
    }
    .logo-design {
        width: 100%;
        height: 100%;
    }
    .logo-design img {
        width: 100%;
        height: 100%;
        scale: .7;
    }
    .slogan{
        text-align: center;
        height: 0px;
    }
    .slogan h2{
        position: relative;
        top: -220px;
        font-size: 2.7rem;
        padding: 2em;
        font-weight: 900;
    }
    body.dark .slogan h2{
        color: whitesmoke;
    }
    @media (max-width:860px){
        .slogan{
        text-align: center;
        height: 200px;
    }
       .slogan h2{
            font-size: 1.7em;
            position: relative;
            top: 0px;
    }
}
    @media(max-width:500px){
        .slogan{
        text-align: center;
        height: 200px;
    }
        .slogan h2{
            position: relative;
            top: 0px;
        font-size: 1.5rem;
    }
    }
