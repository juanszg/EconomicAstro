---
import NavFija from "../components/navFija.astro";
import NavPop from "../components/navPop.astro";
import Footer from "../components/Footer.astro";
import Layout from "../layouts/Layout.astro";
---

<link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
/>
<script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
<body>
    <Layout title="Patrocinios" />
    <NavFija />
    <header>
        <h1>PATROCINIOS</h1>
    </header>
    <div class="titulo">
        <h2>Orgullosamente patrocinadores de la carrera 11K del
            <span>Instituto Politecnico Nacional</span></h2>
    </div>

    <div class="grid-1">
        <div class="imagen-ipn1">
            <img src="/src//components/img/IPN-PATROCINADORES.jpeg" />
        </div>
        <div class="imagen-ipn2">
            <img src="/src//components/img/PDF-CARRERA-IPN.png" />
        </div>
    </div>
    <div class="titulo">
         <h2>Economic Sales presente en el mayor evento de tecnologia del a√±o</h2>
    </div>
   
    <div class="IDX">
        <img src="/src//components/img/IDX.jpg" />
    </div>
    <Footer />
</body>
<style>
    * {
        font-size: montserrat;
        margin: 0px;
        padding: 0px;
    }
    body {
        background-color: whitesmoke;
    }
    .titulo{
        padding: 3em;
        text-align: center;
        margin-top: 4em;
    }
    h2{
        font-size: 1.7em;
        font-family: montserrat;
        font-weight: 700;
    }
  
    .grid-1 {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(35rem, 1fr));
        grid-auto-rows: 35rem;
        grid-column-gap: 0px;
        grid-row-gap: 0px;
        place-items: center;
    }
    .imagen-ipn1 img {
        width: 470px;
        height: 600px;
        transition: transform .3s ease-in-out;
    }
    .imagen-ipn1 img:hover{
        transform: scale(1.2);
    }
    .imagen-ipn2 img {
        width: 470px;
        height: 600px;
        transition: transform .3s ease-in-out;
    }
    .imagen-ipn2 img:hover{
        transform: scale(1.2);
    }
    .IDX img {
        width: 80%;
        height: 50%;
        border-radius: 1em;
    }
    .IDX{
        text-align: center; 
        margin: 2.4em;
    }
    @media (max-width:570px){
        .imagen-ipn1 img {
            transform: scale(0.7);
    }
        .imagen-ipn2 img {
            transform: scale(0.7);
    }
    }
    @media (max-width:530px){
        .grid-1 {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(19rem, 1fr));
        grid-auto-rows: 25rem;
    }
    .imagen-ipn1 img {
            transform: scale(0.6);
    }
        .imagen-ipn2 img {
            transform: scale(0.6);
    }
    .imagen-ipn2 img:hover{
        transform: scale(0.7);
    }
    .imagen-ipn1 img:hover{
        transform: scale(0.7);
    }
    }
    
    header h1 {
        text-align: center;
        font-size: 4em;
        color: aliceblue;
        margin-top: 7%;
        background: rgb(66, 66, 249);
        background: linear-gradient(
            90deg,
            rgb(66, 66, 249) 0%,
            rgb(5, 242, 255) 100%
        );
        margin: 0.5em;
        padding: 1em;
        border-radius: 10px;
        font-weight: bold;
        font-family: montserrat;
    }
    @media (max-width:700px){
        header h1{
            font-size: 3em;
        }
    }
    @media (max-width:510px){
        header h1{
            font-size: 1.8em;
        }
        h2{
            font-size: 1.2em;
        }
    }
    @media (max-width:950px){
    .IDX{
        text-align: center; 
        margin: 0em;
    }
    .titulo{
        padding: 2em;
        text-align: center;
        margin-top: 3em;
        padding-bottom: 2em;
    }
    }
    @media(max-width:400px){
        header h1{
            font-size: 2em;
            margin-top: 2em;
        }
    }

</style>
